!! options :
!! wims_ariane_home = no ==> don't use $wims_home_items
!! wims_ariane_self = no ==> don't generate automatically : home / module
!if $wims_ariane_home=no and $wims_ariane_self=no and $wims_ariane=$empty
  !exit
!endif

<!-- thème Pion : n'affiche pas la racine dans le fil d'Ariane -->
!set wims_ariane_home=no
<!-- thème Pion : supprime le texte "Paged'accueil" au début de chaque lien dans le fil d'Ariane -->
<!-- devrait être dans un fichier de configuration type names.fr, mais impossible de trouver la référence -->
!set wims_name_class_home=
!read themes/_procs/ariane.proc
<!-- _widgets/ariane.phtml -->
!if $wims_theme=Pion
  <div class="wims_msg alert" style="color:black;">Thème PION :D</div>    
!endif
<nav aria-label="You are here:">
  <ul class="breadcrumbs">
  !for i_=1 to $wims_ariane_cnt
    !set 1_=!line $i_ of $wims_ariane_list
    !if " notin $(1_[1]) and * notin $(1_[1])
      !set wims_ref_class = !word 1 of $(1_[1])
    !endif
    !if $wims_ref_class!=$empty
      !set css_class = class="$wims_ref_class menuitem"
    !endif
    <li $css_class>
      !read $(w_path)oneitem.phtml $1_
      !if $i_=$wims_ariane_cnt
        <span class="show-for-sr">(Current)</span>
      !endif
    </li>
    !reset css_class
  !next
  </ul>
</nav>
<!-- end of _widgets/ariane.phtml -->
!!reset wims_ariane_home wims_ariane_self