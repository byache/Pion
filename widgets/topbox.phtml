<!-- start Pion topbox Widget -->

<div id="wimstopbox">
!read themes/Pion/_widgets/bottomback.phtml

!!Site Title
!read themes/Pion/_widgets/site_title.phtml

  !!!!Pas utilisé avec le thème Euler, by jlben !!
  !!if $wims_lightpopup!=yes

    !!Institution logo
    !!set positionlogo=right
    !!read themes/_widgets/institution_logo.phtml
  !!endif

  !distribute items li into div1
  <div class="title-bar" data-responsive-toggle="menu-principal" data-hide-for="medium">
    <button class="menu-icon" type="button" data-toggle></button>
  </div>
  <div id = "menu-principal" class ="top-bar">
    <div>
    !if $[$wims_home_items_cnt + $wims_hm_cnt + $wims_link_close_cnt]!=0 or ($module_path notitemof home,adm,classes and _exam notin $session and $module_init_parm == $empty)
      !!read themes/_widgets/headhome.phtml
      !!read themes/_widgets/headmenu.phtml
      !read themes/$wims_theme/widgets/permalink.phtml
      !reset div0 div1
    !endif
    <ul class="dropdown menu vertical medium-horizontal" data-dropdown-menu data-responsive-menu="accordion medium-dropdown">
      !!module_path = $module_path
      !!wims_hm_cnt = $wims_hm_cnt
      !! s'affiche sur la page d'accueil des visiteurs
      !!if $module isitemof home,adm/class/classes,adm/modtool and ($wims_user=$empty or $wims_user=supervisor)
      !if $module isitemof home,adm/class/classes,adm/modtool and ($wims_user=$empty)
        !if $type!=participant
          !! Participants Zone
          <li class="menuitem n_participant">
            !read ./adm/oneitem.phtml n_participant,1,module=adm/class/classes&type=participant
          </li>
        !endif
        !if $type!=supervisor
          !! Teachers Zone
          <li class="menuitem n_supervisor">
            !read ./adm/oneitem.phtml n_supervisor,1,module=adm/class/classes&type=supervisor
          </li>
        !endif
      !endif
      <!-- Ajout Tutoriels en dehors zone et espace eleve Modif GM le 02/04/20 -->
      !!if ((_ notin $wims_subsession) and (($type!=participant and $type!=authparticipant and $wims_user=$empty ) or ($wims_user=supervisor)))
      !if $class_type isin 24
        !readproc wimshome/log/classes/$wims_class/.users/$wims_user 
        !!! (pour connaître user_supervisable)
      !endif
      !if ($wims_user=$empty or $wims_user=supervisor or $user_supervisable=yes) and ($module=home) and (_ notin $wims_subsession)
        <li class="menuitem dochelp" >
          !!read themes/$wims_theme/widgets/doc/tutoriels.phtml
          !read ./adm/oneitem.phtml dochelp,1,module=local/data/tutorial.fr
        </li>
      !endif

       <!-- Ajout Tutoriels élèves dans espace eleve GM le 02/04/20 -->
      !if $wims_user!=supervisor and $wims_user!=$empty and $user_supervisable!=yes and ($module=home) and (_ notin $wims_subsession) and $display_tuto_eleve=true
        <li class="menuitem dochelp" >
          !read ./adm/oneitem.phtml dochelp,1,module=local/data/tutorial_eleve.fr
        </li>
      !endif

    <!--</ul> Pour regrouper les deux menus-->
    !if $module=home and $wims_user=$empty
       !! Help link
      !set wims_hm = !append line help,4,module=help/main,help to $wims_hm
      !increase $wims_hm_cnt
    !endif
    !read themes/Pion/_widgets/user_links.phtml
    </div>
  </div><!-- end title-bar -->
  !if $wims_lightpopup!=yes
    !read themes/_widgets/ariane.phtml
  !endif
</div><!-- end de wimstopbox-->
<!-- end Pion topbox Widget -->
